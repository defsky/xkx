a=`curl http://pkuxkx.net/antirobot/robot.php?filename=$1 2>/dev/null | sed 's/[^"]*="\([^"]*\)"[^"]*/\1/g;s/"/\n/g;' | sed -n 1p | sed s/\.// `
echo $a

fname=${2}_$(date +%Y%m%d%H%M%S).jpg

if [ -n "$a" ]; then
	wget -c http://pkuxkx.net/antirobot$a -O /ttplugin/img/$fname 2> /dev/null &
	
	if [ $? -eq 0 ]; then
	    echo $fname
	fi
fi
