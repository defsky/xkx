#act {你受到自身经验和悟性的影响，无法继续参禅了。}
{
    @fn_log{结束参禅：%1;true};
    cc off;
}

#ACTION {%*渐渐的你心如止水%*}
{
	set_action 参禅中;
	hpbrief;
	#MATH cc_cnt $cc_cnt + 1;
	@fn_log{开始第 $cc_cnt 次参禅;true}
}
{5}

#ACTION {%*收心定神，满心释然的站了%*}
{
	#MATH cc_isRest $cc_cnt % 100;
	#if {$cc_isRest == 0}
	{
		set_action 吃喝中;
		hpbrief;
		#DELAY {dl_cc}{canchan}{3};
		#SEND do 10 chi gan liang;
		#SEND do 10 he jiudai;
		#send do 10 he cha;
	};
	#ELSE { canchan }
}
{5}

#act {你现在无法静下心来参禅！}
{
    #if {$status[action] == "参禅中"}
    {
        #undelay dl_cc;
    }{
        #delay {dl_cc}{canchan}{5};
    }
}

#TICKER tk_cc {canchan}{300}
