#alias {status.set_action}
{
	#var status[action] {%1};
	update_status_bar
};

#alias {status.bar}
{
	#if {$status[flag][bar] == 1}
	{
		#var status[flag][bar] 0;
		#split;
	}{
		#var status[flag][bar] 1;
		#split 2 2;
		hpbrief1;
	};
};

#event {SCREEN RESIZE}
{
    #var screen[rows] %1;
    #var screen[cols] %0;
    
    #if {$screen[cols] < 120}{
        #showme {screen width need 120 cols at least.};
        mod status unload;
    };
    update_status_bar top;
    update_status_bar;
};

